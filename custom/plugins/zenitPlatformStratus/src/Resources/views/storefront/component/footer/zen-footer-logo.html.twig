{% block layout_footer_logo_inner %}
    <div class="footer-logo-main">
        {% block layout_footer_logo_image %}
            <picture>
                {% block layout_footer_logo_image_tablet %}
                    {% if zentheme['zen-logo-footer-tablet'] %}
                        <source srcset="{{ zentheme['zen-logo-footer-tablet'] |sw_encode_url }}"
                                media="(min-width: {{ shopware.theme.breakpoint.md }}px) and (max-width: {{ shopware.theme.breakpoint.lg - 1 }}px)">
                    {% endif %}
                {% endblock %}

                {% block layout_footer_logo_image_mobile %}
                    {% if zentheme['zen-logo-footer-mobile'] %}
                        <source srcset="{{ zentheme['zen-logo-footer-mobile'] |sw_encode_url }}"
                                media="(max-width: {{ shopware.theme.breakpoint.md - 1 }}px)">
                    {% endif %}
                {% endblock %}

                {% block layout_footer_logo_image_default %}
                    {% if zentheme['zen-logo-footer-desktop'] %}
                        <img src="{{ zentheme['zen-logo-footer-desktop'] |sw_encode_url }}"
                             alt="{{ shopware.config.core.basicInformation.shopName }}"
                             class="img-fluid footer-logo-main-img"/>
                    {% endif %}
                {% endblock %}
            </picture>
        {% endblock %}
    </div>
{% endblock %}
