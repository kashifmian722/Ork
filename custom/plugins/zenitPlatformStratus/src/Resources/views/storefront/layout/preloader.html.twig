{% if ( zentheme['zen-layout-preloader-display'] is same as ('home') and controllerAction is same as ('home') )
    or zentheme['zen-layout-preloader-display'] is same as ('all') %}
    <div class="preloader {{ zentheme['zen-layout-preloader-style'] }}"
         data-zen-preloader-options='{"animationOut": "{{ zentheme['zen-layout-preloader-exit'] }}"}'>
        <div class="preloader-center">
            <div class="preloader-center-absolute">
                {% if zentheme['zen-layout-preloader-style'] is same as ('preloader-1') %}
                    <div class="object--round" id="round--one"></div>
                    <div class="object--round" id="round--two"></div>
                    <div class="object--round" id="round--three"></div>
                {% elseif zentheme['zen-layout-preloader-style'] is same as ('preloader-2') %}
                    <div class="object--wave"></div>
                    <div class="object--wave"></div>
                    <div class="object--wave"></div>
                    <div class="object--wave"></div>
                    <div class="object--wave"></div>
                    <div class="object--wave"></div>
                    <div class="object--wave"></div>
                    <div class="object--wave"></div>
                    <div class="object--wave"></div>
                {% elseif zentheme['zen-layout-preloader-style'] is same as ('preloader-3') %}
                    <div class="object--rotate" id="rotate--one"></div>
                    <div class="object--rotate" id="rotate--two"></div>
                    <div class="object--rotate" id="rotate--three"></div>
                    <div class="object--rotate" id="rotate--four"></div>
                {% elseif zentheme['zen-layout-preloader-style'] is same as ('preloader-4') %}
                    <div class="object--border" id="border--four"></div>
                    <div class="object--border" id="border--three"></div>
                    <div class="object--border" id="border--two"></div>
                    <div class="object--border" id="border--one"></div>
                {% elseif zentheme['zen-layout-preloader-style'] is same as ('preloader-5') %}
                    <picture class="object--logo">
                        <picture>
                            {% block layout_header_logo_image_tablet %}
                                {% if shopware.theme['sw-logo-tablet'] %}
                                    <source srcset="{{ shopware.theme['sw-logo-tablet'] |sw_encode_url }}"
                                            media="(min-width: {{ shopware.theme.breakpoint.md }}px) and (max-width: {{ shopware.theme.breakpoint.lg - 1 }}px)">
                                {% endif %}
                            {% endblock %}

                            {% block layout_header_logo_image_mobile %}
                                {% if shopware.theme['sw-logo-mobile'] %}
                                    <source srcset="{{ shopware.theme['sw-logo-mobile'] |sw_encode_url }}"
                                            media="(max-width: {{ shopware.theme.breakpoint.md - 1 }}px)">
                                {% endif %}
                            {% endblock %}

                            {% block layout_header_logo_image_default %}
                                {% if shopware.theme['sw-logo-desktop'] %}
                                    <img src="{{ shopware.theme['sw-logo-desktop'] |sw_encode_url }}"
                                         alt="{{ "header.logoLink"|trans|striptags }}"
                                         class="img-fluid header-logo-main-img"/>
                                {% endif %}
                            {% endblock %}
                        </picture>
                    </picture>
                {% endif %}
            </div>
        </div>
    </div>
{% endif %}
