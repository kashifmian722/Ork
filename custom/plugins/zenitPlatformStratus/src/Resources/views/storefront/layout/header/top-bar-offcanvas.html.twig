{% sw_extends '@Storefront/storefront/utilities/offcanvas.html.twig' %}

{% block utilities_offcanvas_content %}
    {% block layout_header_top_bar_offcanvas_header %}
        {% block layout_header_top_bar_offcanvas_logo %}
            <div class="top-bar-logo">
                {% block layout_header_top_bar_offcanvas_logo_link %}
                    <a class="top-bar-logo-link"
                       href="{{ path('frontend.home.page') }}"
                       title="{{ "header.logoLink"|trans|striptags }}">
                        {% block layout_header_top_bar_offcanvas_logo_image %}
                            <picture>
                                {% block layout_header_top_bar_offcanvas_logo_image_tablet %}
                                    {% if shopware.theme['zen-logo-offcanvas-tablet'] %}
                                        <source srcset="{{ shopware.theme['zen-logo-offcanvas-tablet'] |sw_encode_url }}"
                                                media="(min-width: {{ shopware.theme.breakpoint.md }}px) and (max-width: {{ shopware.theme.breakpoint.lg - 1 }}px)">
                                    {% endif %}
                                {% endblock %}

                                {% block layout_header_top_bar_offcanvas_logo_image_mobile %}
                                    {% if shopware.theme['zen-logo-offcanvas-mobile'] %}
                                        <source srcset="{{ shopware.theme['zen-logo-offcanvas-mobile'] |sw_encode_url }}"
                                                media="(max-width: {{ shopware.theme.breakpoint.md - 1 }}px)">
                                    {% endif %}
                                {% endblock %}

                                {% block layout_header_top_bar_offcanvas_logo_image_default %}
                                    {% if shopware.theme['zen-logo-offcanvas-desktop'] %}
                                        <img src="{{ shopware.theme['zen-logo-offcanvas-desktop'] |sw_encode_url }}"
                                             alt="{{ "header.logoLink"|trans|striptags }}"
                                             class="img-fluid top-bar-logo-main-img"/>
                                    {% endif %}
                                {% endblock %}
                            </picture>

                        {% endblock %}
                    </a>
                {% endblock %}
            </div>
        {% endblock %}

        {% block layout_header_top_bar_offcanvas_marketing %}
            {% if zenconfig.marketingActive %}
                <div class="top-bar-marketing">
                    {% sw_include '@Storefront/storefront/component/text-slider.html.twig' with {
                        active: zenconfig.marketingActive,
                        text: zenconfig.marketingText,
                        buttonText: zenconfig.marketingButtonText,
                        buttonLink: zenconfig.marketingButtonLink,
                        buttonTarget: zenconfig.marketingButtonTarget
                    } %}
                </div>
            {% endif %}
        {% endblock %}

    {% endblock %}

    {% block layout_header_top_bar_offcanvas_content %}
        {% sw_include '@Storefront/storefront/layout/header/top-bar.html.twig' %}
    {% endblock %}

    {% block layout_header_top_bar_offcanvas_footer %}
        {% sw_include '@Storefront/storefront/component/login-register.html.twig' %}
    {% endblock %}
{% endblock %}
